    <!-- Agreement Form View -->
    <record id="sale_order_agreement_form_view" model="ir.ui.view">
        <field name="name">sale.order.agreement.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            
            <field name="partner_id" position="after">
                <field name="agreement_template_id"/>
                <group name="Agreement">
                        <field name="agreement_id"
                       readonly="1"
                       attrs="{'invisible': [('agreement_id', '=', False)]}"/>
                        <field name="sign_amount"/>
                        <field name="sign_percentage" readonly="1"/>
                        <field name="remain_amount" readonly="1"/>
                        <field name="remain_percentage" readonly="1"/>
                </group>
                
            </field>
            <button name="action_cancel" position="before">
                    <button name="action_generate_template" string="Generate Agreement" type="object" />
            </button>
        </field>
    </record>

</odoo>
